
mixin nav(items)
    ul.nav__list
    each item, index in items
        li.nav__item
            a(href=item.link)=item.name
            if item.active
                i.fas.fa-angle-down.ms-1

mixin footer-block(title, items)
    div.block.col-12.col-md-2
        ul.about__list
            span.about__title=title
            each item, index in items
                li.about__text
                    a(href=item.link)
                        span.about__text=item.text

mixin home-avatar(items)
    div.image-wrapper.row 
        each item, index in items
            div.image__item.col-12.col-sm-6 
                a(href=item.link)
                    img.img-fluid(src=item.src, alt=item.alt) 

mixin list-title(items)
    div.row.justify-content-center
        each item, index in items
            div.text__list.col-12.col-md-auto
                a(href=item.link)
                    span.product__title(class=item.active === false ? "" : "product__title--active")=item.title

mixin list-category(items)
    div.row.justify-content-center
        each item, index in items
            div.text__list.col-auto
                a(href=item.link)
                    span.product__category(class=item.active === true ? "product__category--active" : "")=item.text

mixin contact-link(items)
    div.contact__link.row
        each item, index in items
            div.col-auto 
                a(href=item.link) 
                    i.contact__icon(class=item.icon)
                    span.contact__name(class=item.active === true ? "product__name--active" : "")=item.name

mixin product-list()
    div.product__list.row
        block
