include ../../mixins/mixins.pug
include     ../../data/product.pug

div.sidebar
    div.sidebar__title 
        i.fas.fa-bars
        span.ms-2 DANH MỤC SẢN PHẨM
    +categorys(categorys, fewels)
    div.sidebar__title.mt-3 SO SÁNH SẢN PHẨM
    div.sidebar__text Bạn chưa có sản phẩm nào để so sánh
    div.sidebar__title.mt-3 TAG SẢN PHẨM
    div.sidebar__tag
        each item, index in tagList
            button.button.button-tag(class=item.active === true ? "button-tag--dark" : "")=item.name
    div.sidebar__img
        img(src="../../../assets/images/sidebar-img.png", alt="")